[core]
    excludesfile = ~/.config/git/.gitignore
    quotepath = false
[pull]
    ff = only
[init]
    defaultBranch = master
[commit]
    gpgsign = true
[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed_signers

[user]
    name = Michał Wieluński
    email = michal.wielunski@audiotekagroup.com
    signingkey = ~/.ssh/key.pub
[url "git@git.dcwp.pl:"]
    insteadOf = https://git.dcwp.pl/
[url "ssh://git@github.com"]
    insteadOf = https://github.com
